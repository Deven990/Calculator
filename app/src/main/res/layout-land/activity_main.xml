<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/history_layout"
        android:visibility="invisible"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:targetApi="p" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HistoryView"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/curIn"
        android:layout_width="622dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:background="@null"
        android:hint=""
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:text="@string/history"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        tools:ignore="SpUsage"
        tools:layout_editor_absoluteY="-2dp"
        tools:targetApi="p" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Advance_Function_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/guideline7"
        app:layout_constraintEnd_toEndOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/curIn">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/invert_button"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_corner"
                android:textOff="@string/Invert"
                android:textOn="@string/Invert"
                android:textSize="18sp"
                tools:targetApi="p" />

            <ToggleButton
                android:id="@+id/toggle_deg_rad"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_corner"
                android:textOff="@string/rad"
                android:textOn="@string/degree"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/buttonsqrt"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/sqrt"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/fact"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/factorial"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/delete"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/del"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ac"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ac_button"
                android:text="@string/AC"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/sine"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/sine"
                android:textAllCaps="false"
                android:textSize="16sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/pwr"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/power"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"

                android:text="@string/_7"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button8"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"

                android:text="@string/_8"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button9"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"

                android:text="@string/_9"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonAdd"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"

                android:text="@string/Add"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck"
                tools:targetApi="p" />

            <Button
                android:id="@+id/cosine"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/cosine"
                android:textAllCaps="false"
                android:textSize="16sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonbracO"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/string_bracket_open"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_4"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_5"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_6"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonMul"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/multiply"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/tan"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/tan"
                android:textAllCaps="false"
                android:textSize="16sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonbracC"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/bracket_Close"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_1"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_2"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_3"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonSub"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/substract"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck"
                tools:targetApi="p" />

            <Button
                android:id="@+id/buttonlog"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/logb"
                android:textAllCaps="false"
                android:textSize="16sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/pi"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/pi"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Buttondec"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/dot"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/Button0"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/_0"
                android:textSize="18sp"
                tools:targetApi="p" />

            <Button
                android:id="@+id/result"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/equals"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck"
                tools:targetApi="p" />

            <Button
                android:id="@+id/ButtonDiv"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/division"
                android:textSize="18sp"
                tools:targetApi="p" />

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.96046853" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.054380666" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.96" />

</androidx.constraintlayout.widget.ConstraintLayout>