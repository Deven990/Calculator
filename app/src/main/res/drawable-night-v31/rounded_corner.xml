<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/system_accent2_300">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/system_accent2_300" />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@android:color/system_accent2_800"
                android:startColor="@android:color/system_accent2_900"
                android:type="linear" />
            <corners android:radius="100dp" />
        </shape>
    </item>
</ripple>
